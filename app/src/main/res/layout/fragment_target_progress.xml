<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/fragment_target_progress_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:scaleType="fitXY"
        app:placeholderImage="@drawable/placeholder"
        app:placeholderImageScaleType="fitXY"
        app:roundAsCircle="true" />

    <view
        android:id="@+id/fragment_target_progress_view"
        class="com.nike.dooit.views.custom.ArcProgressBar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:arc_bottom_text_margin_top="8dp"
        app:arc_finished_color="@color/light_blue_alpha"
        app:arc_progress="10"
        app:arc_text_color="@color/black"
        app:arc_unfinished_color="@color/light_grey_alpha" />
</FrameLayout>