<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_profile_achievement_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/activity_profile_achievement_icon_image_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:scaleType="fitCenter"
        app:roundAsCircle="true"
        app:srcCompat="@drawable/ic_d_badge"
        tools:src="@drawable/ic_d_badge"/>

    <TextView
        android:id="@+id/activity_profile_achievement_text_text_view"
        style="@style/AppTheme.TextView.Regular.Large"
        fontPath="fonts/LondrinaSolid-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/activity_profile_achievement_icon_image_view"
        android:gravity="center_vertical"
        android:textColor="@color/purple"
        android:textStyle="bold"
        tools:text="2 Weekly Saving" />

    <ImageView
        android:id="@+id/activity_profile_achievement_item_share"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_d_share_icon_small_grey"
        tools:src="@drawable/ic_d_share_icon_small_grey"/>
</RelativeLayout>