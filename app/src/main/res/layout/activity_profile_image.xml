<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:fitsSystemWindows="true"
    tools:context=".views.onboarding.ProfileImageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:padding="24dp">

        <TextView
            android:id="@+id/activity_profile_image_title"
            style="@style/AppTheme.TextView.Regular.ExtraExtraLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Upload Photo"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/activity_profile_image_profile_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/activity_profile_image_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@color/transparent"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"
            app:layout_collapseMode="parallax"
            app:placeholderImage="@android:drawable/sym_def_app_icon"
            app:roundAsCircle="true"
            tools:background="@android:drawable/sym_def_app_icon" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/activity_profile_image_profile_image"
            android:layout_alignEnd="@+id/activity_profile_image_profile_image"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/activity_profile_image_skip_text_view"
            style="@style/AppTheme.TextView.Medium.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_profile_image_profile_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:text="Skip"
            android:textColor="@color/pink" />


        <Button
            android:id="@+id/activity_profile_image_next_button"
            style="@style/AppTheme.Button.Big.Yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_profile_image_skip_text_view"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:text="Next"
            android:textAllCaps="true" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
