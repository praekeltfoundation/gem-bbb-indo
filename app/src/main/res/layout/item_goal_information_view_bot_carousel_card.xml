<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view_bot_carousel_card_goal"
    android:layout_width="@dimen/bot_carousel_card_width"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/bot_carousel_card_horizontal_margin"
    android:layout_marginBottom="4dp"
    tools:background="@drawable/bkg_carousel_card">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_view_bot_carousel_card_image_goal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bot_carousel_card_image_height"
        android:scaleType="centerCrop"
        android:background="@color/purple"
        app:placeholderImage="@drawable/empty_image"/>

    <TextView
        android:id="@+id/item_view_bot_carousel_card_title_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextView.Regular.Large"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_view_bot_carousel_card_image_goal"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        tools:text="Goal"/>

    <View
        android:id="@+id/item_view_bot_carousel_card_separator_goal"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@id/item_view_bot_carousel_card_title_goal"
        android:layout_marginTop="4dp"
        tools:background="@drawable/bkg_carousel_separator"
        />

    <TextView
        android:id="@+id/item_view_bot_carousel_card_select_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextView.Bold.Large"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_view_bot_carousel_card_separator_goal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/light_blue"
        android:text="@string/bot_carousel_card_select"
        />

</RelativeLayout>