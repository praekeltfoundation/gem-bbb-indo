<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <TextView
        android:id="@+id/fragment_challenge_wrong_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/fragment_challenge_wrong_text"
        android:textAlignment="center"
        android:textAppearance="@style/AppTheme.TextView.Regular.Large"
        app:layout_constraintBottom_toTopOf="@+id/fragment_challenge_wrong_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/fragment_challenge_wrong_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_challenge_wrong_hint"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_challenge_wrong_text"
        app:layout_constraintRight_toLeftOf="@+id/fragment_challenge_wrong_hint"
        app:layout_constraintTop_toTopOf="@+id/fragment_challenge_wrong_hint"
        app:srcCompat="@drawable/ic_d_bot"
        tools:src="@drawable/ic_d_bot" />

    <TextView
        android:id="@+id/fragment_challenge_wrong_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:padding="16dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/fragment_challenge_wrong_coach"
        app:layout_constraintRight_toRightOf="@+id/fragment_challenge_wrong_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_challenge_wrong_text"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Hint: It's closer to 10" />

    <Button
        android:id="@+id/fragment_challenge_continue_button"
        style="@style/AppTheme.Button.Big.LightBlue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/label_try_again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/fragment_challenge_wrong_text"
        app:layout_constraintRight_toRightOf="@+id/fragment_challenge_wrong_text" />

</android.support.constraint.ConstraintLayout>