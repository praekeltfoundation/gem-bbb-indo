<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/bot_carousel_card_width"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_view_bot_carousel_card_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bot_carousel_card_image_height"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/item_view_bot_carousel_card_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_view_bot_carousel_card_image"
        tools:text="Goal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_view_bot_carousel_card_title"
        android:text="@string/bot_carousel_card_select"
        />

</RelativeLayout>