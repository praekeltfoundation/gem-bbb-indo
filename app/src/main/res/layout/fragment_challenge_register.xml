<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_challenge_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context="org.gem.indo.dooit.views.main.fragments.challenge.fragments.ChallengeRegisterFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fragment_challenge_register_image"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginBottom="24dp"
            android:background="@color/purple"
            app:layout_constraintBottom_toTopOf="@+id/fragment_challenge_sub_title_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholderImage="@drawable/empty_image"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/fragment_challenge_sub_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="@style/AppTheme.TextView.Regular.Medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/fragment_challenge_name_text_view"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_challenge_name_text_view"
            app:layout_constraintRight_toRightOf="@+id/fragment_challenge_name_text_view"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:text="Very Short Sub-Title" />

        <TextView
            android:id="@+id/fragment_challenge_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:textAppearance="@style/AppTheme.TextView.Regular.ExtraLarge"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/fragment_challenge_expire_date_text_view"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_challenge_expire_date_text_view"
            app:layout_constraintRight_toRightOf="@+id/fragment_challenge_expire_date_text_view"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:text="Quiz Challenge Name" />

        <TextView
            android:id="@+id/fragment_challenge_expire_date_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textAlignment="center"
            android:textAppearance="@style/AppTheme.TextView.Regular.Medium"
            android:textColor="@color/black"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toTopOf="@+id/fragment_challenge_instruction_text_vew"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_challenge_instruction_text_vew"
            app:layout_constraintRight_toRightOf="@+id/fragment_challenge_instruction_text_vew"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:text="Ends Month, dd, time" />

        <TextView
            android:id="@+id/fragment_challenge_instruction_text_vew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:minLines="4"
            android:textAlignment="center"
            android:textAppearance="@style/AppTheme.TextView.Regular.Medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/fragment_challenge_t_c_text_view"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_challenge_t_c_text_view"
            app:layout_constraintRight_toRightOf="@+id/fragment_challenge_t_c_text_view"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:text="@string/placeholder_label_long" />

        <TextView
            android:id="@+id/fragment_challenge_t_c_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/challenge_t_c"
            android:textAlignment="center"
            android:textAppearance="@style/AppTheme.TextView.Regular.Small"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/fragment_challenge_register_button"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_challenge_register_button"
            app:layout_constraintRight_toRightOf="@+id/fragment_challenge_register_button"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <Button
            android:id="@+id/fragment_challenge_register_button"
            style="@style/AppTheme.Button.Big.Purple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/challenge_register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />
    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
