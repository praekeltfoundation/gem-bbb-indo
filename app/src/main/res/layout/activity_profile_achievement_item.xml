<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_achievement_layout"
    android:layout_width="match_parent"
    android:layout_height="32dp">

    <ImageView
        android:id="@+id/activity_profile_achievement_icon_image_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_d_badge" />

    <TextView
        android:id="@+id/activity_profile_achievement_text_text_view"
        style="@style/AppTheme.TextView.Regular.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/activity_profile_achievement_icon_image_view"
        android:gravity="center_vertical"
        android:textColor="@color/purple"
        android:textStyle="bold"
        tools:text="2 Weekly Saving" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/activity_profile_achievement_text_text_view"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_d_share_icon_small_grey" />
</RelativeLayout>