<org.gem.indo.dooit.views.custom.DesignSafeRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/fragment_tips_list_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/fragment_tips_list_filter"
    tools:context="org.gem.indo.dooit.views.main.fragments.tip.TipsListFragment">

    <RelativeLayout
        android:id="@+id/fragment_tip_progress_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

        <ProgressBar
            android:id="@+id/fragment_tip_loadingprogress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/fragment_tip_loadingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_tip_loadingprogress"
            android:layout_centerHorizontal="true"
            android:text="@string/label_loading" />
    </RelativeLayout>

</org.gem.indo.dooit.views.custom.DesignSafeRecyclerView>

