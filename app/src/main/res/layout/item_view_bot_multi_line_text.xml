<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_view_bot_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/item_view_bot_text"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/item_view_bot_text"
        style="@style/AppTheme.TextView.Regular.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_view_bot_icon"
        android:background="@drawable/rounded_squre_light_blue"
        android:padding="4dp"
        android:textColor="@color/black"
        tools:text="Blank Answer" />


    <TextView
        android:id="@+id/item_view_bot_text_2"
        style="@style/AppTheme.TextView.Regular.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_view_bot_text"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/item_view_bot_icon"
        android:background="@drawable/rounded_squre_light_blue"
        android:padding="4dp"
        android:textColor="@color/black"
        tools:text="Blank Answer" />
</RelativeLayout>