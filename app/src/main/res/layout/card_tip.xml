<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/tip_card_margin"
    android:layout_marginLeft="@dimen/tip_card_margin"
    android:layout_marginRight="@dimen/tip_card_margin"
    android:layout_marginTop="@dimen/tip_card_margin"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/card_tip_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tip_card_image_height"
            app:placeholderImage="@color/light_grey" />

        <LinearLayout
            android:id="@+id/card_tip_tags_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_tip_image"
            android:layout_alignStart="@id/card_tip_image"
            android:layout_margin="@dimen/tip_card_icon_margin"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/card_tip_title"
            style="@style/AppTheme.TextView.Regular.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_tip_image"
            android:layout_marginTop="@dimen/tip_card_title_margin"
            android:text="TextView"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/card_tip_share"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@+id/card_tip_image"
            android:layout_alignRight="@+id/card_tip_image"
            android:layout_marginBottom="@dimen/tip_card_icon_margin"
            android:layout_marginRight="@dimen/tip_card_icon_margin"
            app:srcCompat="@drawable/ic_d_share_icon_small" />

        <ImageView
            android:id="@+id/card_tip_fav"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_alignBottom="@+id/card_tip_image"
            android:layout_marginBottom="@dimen/tip_card_icon_margin"
            android:layout_marginRight="@dimen/tip_card_icon_margin"
            android:layout_toLeftOf="@+id/card_tip_share"
            app:srcCompat="@drawable/ic_d_heart_inverted" />
    </RelativeLayout>

</android.support.v7.widget.CardView>