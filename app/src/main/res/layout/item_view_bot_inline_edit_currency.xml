<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/rounded_squre_light_blue">

        <TextView
            android:id="@+id/item_view_bot_inline_edit_currency_view"
            style="@style/AppTheme.TextView.Regular.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="4dp"
            android:text="@string/abbrev_currency"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/item_view_bot_inline_edit_view"
            style="@style/AppTheme.TextView.Regular.Large"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_view_bot_inline_edit_currency_view"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:maxLines="1"
            android:padding="4dp"
            android:textColor="@color/black"
            tools:text="Blank Answer" />
    </RelativeLayout>
</FrameLayout>