<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nike.dooit.views.welcome.WelcomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_welcome_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/activity_welcome_button"
        style="@style/AppTheme.Button.Big.Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:text="@string/lets_start"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/activity_welcome_indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        app:fillColor="@color/black"
        app:pageColor="@color/light_grey_alpha"
        app:radius="3dp"
        app:strokeColor="@color/white"
        app:strokeWidth="0dp" />

</RelativeLayout>
