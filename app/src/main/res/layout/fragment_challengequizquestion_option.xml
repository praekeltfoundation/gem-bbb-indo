<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/option_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/challenge_option_margins"
    android:background="@drawable/challenge_option_selector"
    android:clickable="false"
    android:orientation="horizontal"
    android:padding="@dimen/challenge_option_padding">

    <RadioButton
        android:id="@+id/option_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="false"
        tools:text="Quiz option" />
</LinearLayout>