<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bot_answer_right_margin"
    android:gravity="right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_view_bot_answer_tail"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/item_view_bot_answer_text"
        app:srcCompat="@drawable/ic_d_answer_dialogue_tail"/>

    <TextView
        android:id="@+id/item_view_bot_answer_text"
        style="@style/AppTheme.TextView.Regular.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_d_answer_dialogue_bkg"
        android:paddingTop="@dimen/bot_text_padding_vertical"
        android:paddingBottom="@dimen/bot_text_padding_vertical"
        android:paddingStart="@dimen/bot_text_padding_horizontal"
        android:paddingEnd="@dimen/bot_text_padding_horizontal"
        android:textColor="@color/grey_fore"
        tools:text="Blank Answer" />
</RelativeLayout>