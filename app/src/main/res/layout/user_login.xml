<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_screen_horizontal_padding"
    android:paddingRight="@dimen/activity_screen_horizontal_padding"
    android:paddingTop="@dimen/activity_screen_verticle_padding">

    <TextView
        android:text="@string/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewHeading"
        android:textAppearance="?attr/textAppearanceHeading"
        android:textAlignment="center" />

    <TextView
        android:text="@string/login_debug_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDebugUrl"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <TextView
        android:text="@string/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUsername"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextUsername"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:text="@string/username_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewUsernameHint"
        android:textAppearance="?attr/textAppearanceHint"/>

    <TextView
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPassword"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:text="@string/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLogin"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:text="@string/login_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProgress"
        android:textAlignment="center" />
</LinearLayout>