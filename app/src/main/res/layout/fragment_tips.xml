<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nike.dooit.views.main.fragments.target.TargetFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pattern_01_grey" />

    <RelativeLayout
        android:id="@+id/fragment_tips_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow">

        <RelativeLayout
            android:id="@+id/fragment_tips_search_container"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/tip_card_margin"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/tip_card_margin">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_d_edit_text" />

            <AutoCompleteTextView
                android:id="@+id/fragment_tips_search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableEnd="@drawable/ic_d_search"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:paddingLeft="16dp"
                tools:text="Search favourite tips..."/>
        </RelativeLayout>

        <TextView
            android:id="@+id/fragment_tips_search_hint"
            fontPath="fonts/Lato-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_tips_search_container"
            android:layout_marginEnd="@dimen/tip_card_margin"
            android:layout_marginStart="@dimen/tip_card_margin"
            android:layout_marginTop="4dp"
            android:text="@string/tips_search_hint"
            android:textSize="@dimen/k_font_small" />

        <android.support.design.widget.TabLayout
            android:id="@+id/fragment_tips_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_tips_search_hint"
            android:layout_marginTop="12dp"
            android:background="@color/yellow"
            app:tabBackground="@drawable/tab_tips_bkg"
            app:tabIndicatorColor="@color/grey"
            app:tabIndicatorHeight="@dimen/tip_tab_indicator_height"
            app:tabPaddingBottom="0dp"
            app:tabPaddingEnd="0dp"
            app:tabPaddingStart="0dp"
            app:tabPaddingTop="0dp"
            app:tabTextAppearance="@style/AppTheme.TextView.Regular.ExtraLarge">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Left" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Center" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Right" />
        </android.support.design.widget.TabLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_tips_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_tips_head" />

</RelativeLayout>
