<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view_bot_challenge"
    android:layout_width="@dimen/bot_tip_card_width"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/bot_left_margin"
    android:layout_marginEnd="@dimen/bot_left_margin"
    tools:background="@drawable/bkg_carousel_card"
    tools:context=".views.main.MainActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_view_bot_challenge_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bot_tip_card_image_height"
        android:background="@color/purple"
        app:placeholderImage="@drawable/empty_image"/>

    <TextView
        android:id="@+id/item_view_bot_challenge_image_sub_title"
        style="@style/AppTheme.TextView.Regular.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view_bot_challenge_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/bot_challenge_card_vertical_margin"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/grey"
        tools:text="Very short subtitle"/>

    <TextView
        android:id="@+id/item_view_bot_challenge_image_title"
        style="@style/AppTheme.TextView.Bold.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_view_bot_challenge_image_sub_title"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/bot_challenge_card_vertical_margin"
        android:textAlignment="center"
        tools:text="Challenge Title"/>

</RelativeLayout>