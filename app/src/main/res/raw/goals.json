[
  {
    "name": "goalGreeting",
    "type": "text",
    "text": "$(goalGreeting)",
    "textParams": ["USERNAME"],
    "autoNext": "goalIntroduction"
  },
  {
    "name": "goalIntroduction",
    "type": "text",
    "text": "$(goalIntroduction)",
    "answers": [
      {"name": "greeting", "next": "askGoalName", "text":"$(greeting)" } ]
  },
  {
    "name": "askGoalName",
    "type": "goalSelection",
    "text": " $(askGoalName) ",
    "answers": [
      {"name": "goalNameOption", "next": "askGoalNameInput", "text":"$(addOwnGoal)" } ]
  },
  {
    "name": "askGoalNameInput",
    "type": "text",
    "text": " $(askGoalNameInput) ",
    "autoAnswer": "goalName",
    "answers": [
      {"name": "goalName", "nextOnFinish": "goalNameCongrats", "type": "inlineText", "inlineEditHint": "$(type_name_hint)" } ]
  },
  {
    "name": "goalNameCongrats",
    "type": "text",
    "text": "$(goalNameCongrats)",
    "autoNext": "askGoalImage"
  },
  {
    "name": "askGoalImage",
    "type": "text",
    "text": "$(askGoalImage)",
    "answers": [
      { "name": "Capture", "text":"$(Capture)", "type": "CameraUpload", "nextOnFinish": "askGoalImageConfirm", "removeOnSelect": "Capture"},
      { "name": "Gallery", "text":"$(Gallery)", "type": "GalleryUpload", "nextOnFinish": "askGoalImageConfirm", "removeOnSelect": "Gallery"}
    ]
  },
  {
    "name": "askGoalImageConfirm",
    "type": "blank",
    "answers": [
      { "name": "Change", "text":"$(Change)", "next": "askGoalAmount" },
      { "name": "Accept", "text":"$(Accept)", "next": "askGoalAmount" }
    ]
  },
  {
    "name": "askGoalAmount",
    "type": "text",
    "text": "$(askGoalAmount)",
    "autoAnswer": "goalAmount",
    "answers": [ { "name": "goalAmount", "nextOnFinish": "askGoalDate", "type":"inlineCurrency", "typeOnFinish":"textCurrency", "inlineEditHint": "$(type_currency_hint)" } ]
  },
  {
    "name": "askGoalDate",
    "type": "text",
    "text": "$(askGoalDate)",
    "textParams": ["goalAmount"],
    "answers": [
      { "name": "knowDateY", "text":"$(addDate)", "next": "askGoalDateCustom"},
      { "name": "knowDateN", "text":"$(unknownDate)", "next": "askGoalWeeklySaveAmount"}
    ]
  },
  {
    "name": "askGoalDateCustom",
    "type": "blank",
    "autoAnswer": "goalDate",
    "answers": [ { "name": "goalDate", "nextOnFinish": "askGoalPriorSave", "type":"inlineDate", "inlineEditHint": "$(type_date_hint)" } ]
  },
  {
    "name": "askGoalWeeklySaveAmount",
    "type": "text",
    "text": "$(askGoalWeeklySaveAmount)",
    "answers": [
      { "name": "five", "value":  "500", "text":"$(five)", "next": "askGoalPriorSave", "type":"textCurrency"},
      { "name": "thousnad", "value": "1000", "text":"$(thousand)", "next": "askGoalPriorSave", "type":"textCurrency"},
      { "name": "thousandFive", "value": "1500", "text":"$(thousandFive)", "next": "askGoalPriorSave", "type":"textCurrency"},
      { "name": "twoThousand", "value": "2000", "text":"$(twoThousand)", "next": "askGoalPriorSave", "type":"textCurrency"},
      { "name": "otherSaveAmount", "value": "other", "text": "$(otherSaveAmount)", "next": "askGoalSaveAmountOther"}
    ]
  },
  {
    "name": "askGoalSaveAmountOther",
    "type": "currency",
    "text": "$(askGoalSaveAmountOther)",
    "error": "validationFailSaveAmountOther",
    "answers": [ { "name": "weeklySaveAmount", "next": "askGoalPriorSave" } ]
  },
  {
    "name": "askGoalPriorSave",
    "type": "text",
    "text": "$(askGoalPriorSave)",
    "answers": [
      { "name": "hasSavedY", "text":"$(addAmount)", "next": "askPriorSavedAmount"},
      { "name": "hasSavedN", "text":"$(nope)", "next": "verifyGoalAmount"}
    ]
  },
  {
    "name": "askPriorSavedAmount",
    "type": "text",
    "text": "$(askPriorSavedAmount)",
    "autoAnswer": "priorSaveAmount",
    "answers": [ { "name": "priorSaveAmount", "nextOnFinish": "infoGoalEnd", "type":"inlineCurrency", "typeOnFinish":"textCurrency", "inlineEditHint": "$(type_currency_hint)" } ]
  },
  {
    "name": "verifyGoalAmount",
    "type": "text",
    "text": "$(verifyGoalAmount)",
    "error": "validationFailPriorSavedAmount",
    "answers": [
      { "name": "goalCheckRT", "value": "reduceWeek", "text":"$(goalCheckRT)", "next": "askKnowGoalDate"},
      { "name": "goalCheckRA", "value": "reduceAmount", "text":"$(goalCheckRA)", "next": "askPriorSavedAmount"},
      { "name": "goalCheckOk", "value": "ok", "text":"$(goalCheckOk)", "next": "infoGoalEnd"}
    ]
  },
  {
    "name": "validationFail",
    "type": "info",
    "text": "$(validationFail)",
    "next": "askGoalAmount"
  },
  {
    "name": "validationFailDate",
    "type": "info",
    "text": "$(validationFailDate)",
    "next": "askGoalDate"
  },
  {
  "name": "validationFailSaveAmountOther",
  "type": "info",
  "text": "$(validationFailSaveAmountOther)",
  "next": "askGoalSaveAmountOther"
  },
  {
  "name": "validationFailPriorSavedAmount",
  "type": "info",
  "text": "$(validationFailPriorSavedAmount)",
  "next": "askPriorSavedAmount"
},
  {
    "name": "infoGoalEnd",
    "type": "end",
    "text": "$(infoGoalEnd)"
  }
]
