[
  {
    "name": "savingsAskType",
    "text": "$(savingsAskType)",
    "type": "choice",
    "answers": [
      {"name":"Save","value":"save","text":"$(Save)","next":"savingsAskSaveAmount"},
      {"name":"WithdrawButton","value":"withdraw","text":"$(WithdrawButton)","next":"savingsAskWithdrawAmount"}
    ]
  },
  {
    "name": "savingsAskSaveAmount",
    "text": "$(savingsAskSaveAmount)",
    "type": "currency",
    "error": "savingsInfoInvalidAmount",
    "answers": [
      {"name":"amount","value":"","text":"","next":"savingsCongratulate"}
    ]
  },
  {
    "name": "savingsInfoInvalidAmount",
    "text": "$(savingsInfoInvalidAmount)",
    "type": "info",
    "next": "savingsAskSaveAmount"
  },
  {
    "name": "savingsCongratulate",
    "text": "$(savingsCongratulate)",
    "type": "info"
  },
  {
    "name": "savingsAskWithdrawAmount",
    "text": "$(savingsAskWithdrawAmount)",
    "type": "currency",
    "error": "savingsInfoWithdrawInvalidAmount",
    "answers": [
      {"name":"amount","value":"","text":"","next":"savingsConsole"}
    ]
  },
  {
    "name": "savingsInfoWithdrawInvalidAmount",
    "text": "$(savingsInfoWithdrawInvalidAmount)",
    "type": "info",
    "next": "savingsAskWithdrawAmount"
  },
  {
    "name": "savingsConsole",
    "text": "$(savingsConsole)",
    "type": "info"
  }
]
