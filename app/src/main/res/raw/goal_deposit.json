[
  {
    "name": "goalGreeting",
    "type": "text",
    "text": "$(goalGreeting)",
    "textParams": [
      "USERNAME"
    ],
    "autoNext": "depositIntroduction"
  },
  {
    "name": "depositIntroduction",
    "type": "text",
    "text": "$(depositIntroduction)",
    "autoNext": "depositReminder"
  },
  {
    "name": "depositReminder",
    "type": "text",
    "text": "$(depositReminder)",
    "autoNext": "depositRemainder",
    "textParams": [
      "LOCAL_CURRENCY",
      "GOAL_DEPOSIT_WEEKLY_TARGET",
      "GOAL_DEPOSIT_TARGET",
      "GOAL_DEPOSIT_END_DATE"
    ]
  },
  {
    "name": "depositRemainder",
    "type": "text",
    "text": "$(depositRemainder)",
    "textParams": [
      "GOAL_DEPOSIT_WEEKS_LEFT",
      "GOAL_DEPOSIT_DAYS_LEFT"
    ],
    "answers": [
      {
        "name": "askDepositAddAmount",
        "text": "$(addAmount)",
        "next": "askDepositAmount"
      }
    ]
  },
  {
    "name": "askDepositAmount",
    "type": "blank",
    "autoAnswer": "depositAmount",
    "answers": [
      {
        "name": "depositAmount",
        "nextOnFinish": "depositEnd",
        "type": "inlineCurrency",
        "typeOnFinish": "textCurrency",
        "inlineEditHint": "$(type_currency_hint)"
      }
    ]
  },
  {
    "name": "depositEnd",
    "type": "end",
    "text": "$(depositEnd)"
  }
]
