<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TextView" parent="@android:style/TextAppearance">

    </style>

    <!-- Regular -->

    <style name="AppTheme.TextView.Regular" parent="AppTheme.TextView">
      <!--  <item name="android:fontFamily">sans-serif</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Lato-Regular.ttf</item>
    </style>

    <style name="AppTheme.Menu.Bold" parent="AppTheme.TextView">
        <!--  <item name="android:fontFamily">sans-serif</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>

    <style name="AppTheme.Menu.Bold.Medium" parent="AppTheme.Menu.Bold">
        <item name="android:textSize">@dimen/k_font_medium</item>
    </style>

    <style name="AppTheme.TextView.Regular.XXXLarge" parent="AppTheme.TextView.Regular">
        <item name="android:textSize">@dimen/k_font_xxx_large</item>
    </style>

    <style name="AppTheme.TextView.Regular.ExtraExtraLarge" parent="AppTheme.TextView.Regular">
        <item name="android:textSize">@dimen/k_font_xx_large</item>
    </style>

    <style name="AppTheme.TextView.Regular.ExtraLarge" parent="AppTheme.TextView.Regular">
        <item name="android:textSize">@dimen/k_font_extra_large</item>
    </style>

    <style name="AppTheme.TextView.Regular.Large" parent="AppTheme.TextView.Regular">
        <item name="android:textSize">@dimen/k_font_large</item>
    </style>

    <style name="AppTheme.TextView.Regular.Medium" parent="AppTheme.TextView.Regular">
        <item name="android:textSize">@dimen/k_font_medium</item>
    </style>

    <style name="AppTheme.TextView.Regular.Small" parent="AppTheme.TextView.Regular">
        <item name="android:textSize">@dimen/k_font_small</item>
    </style>

    <style name="AppTheme.TextView.Regular.ExtraSmall" parent="AppTheme.TextView.Regular">
        <item name="android:textSize">@dimen/k_font_extra_small</item>
    </style>

    <style name="AppTheme.TextView.Regular.ExtraLarge.Bold" parent="AppTheme.TextView.Regular.ExtraLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Heading -->

    <style name="AppTheme.TextView.Regular.XXXLargeHeading" parent="AppTheme.TextView.Regular.XXXLarge">
        <item name="android:textColor">@color/heading</item>
    </style>

    <style name="AppTheme.TextView.Regular.ExtraExtraLargeHeading" parent="AppTheme.TextView.Regular.ExtraExtraLarge">
        <item name="android:textColor">@color/heading</item>
    </style>

    <style name="AppTheme.TextView.Regular.ExtraLargeHeading" parent="AppTheme.TextView.Regular.ExtraLarge">
        <item name="android:textColor">@color/heading</item>
    </style>

    <style name="AppTheme.TextView.Regular.LargeHeading" parent="AppTheme.TextView.Regular.Large">
        <item name="android:textColor">@color/heading</item>
    </style>

    <style name="AppTheme.TextView.Regular.MediumHeading" parent="AppTheme.TextView.Regular.Medium">
        <item name="android:textColor">@color/heading</item>
    </style>

    <style name="AppTheme.TextView.Regular.SmallHeading" parent="AppTheme.TextView.Regular.Small">
        <item name="android:textColor">@color/heading</item>
    </style>

    <style name="AppTheme.TextView.Regular.ExtraSmallHeading" parent="AppTheme.TextView.Regular">
        <item name="android:textSize">@dimen/k_font_extra_small</item>
    </style>

    <!-- Bold -->

    <style name="AppTheme.TextView.Bold" parent="AppTheme.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>

    <style name="AppTheme.TextView.Bold.ExtraLarge" parent="AppTheme.TextView.Bold">
        <item name="android:textSize">@dimen/k_font_extra_large</item>
    </style>

    <style name="AppTheme.TextView.Bold.Large" parent="AppTheme.TextView.Bold">
        <item name="android:textSize">@dimen/k_font_large</item>
    </style>

    <style name="AppTheme.TextView.Bold.Medium" parent="AppTheme.TextView.Bold">
        <item name="android:textSize">@dimen/k_font_medium</item>
    </style>

    <style name="AppTheme.TextView.Bold.Small" parent="AppTheme.TextView.Bold">
        <item name="android:textSize">@dimen/k_font_small</item>
    </style>

    <style name="AppTheme.TextView.Bold.ExtraSmall" parent="AppTheme.TextView.Bold">
        <item name="android:textSize">@dimen/k_font_extra_small</item>
    </style>

    <!-- Challenge -->

    <style name="AppTheme.TextView.Quiz.Title" parent="AppTheme.TextView.Regular.ExtraLarge">
        <item name="android:textColor">@color/colorQuizText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.TextView.Quiz.Subtitle" parent="AppTheme.TextView.Regular.Medium">
        <item name="android:textColor">@color/colorQuizSubtitle</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.TextView.Quiz.Button" parent="AppTheme.TextView.Regular.Medium">
        <item name="android:textColor">@color/colorQuizButtonText</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>