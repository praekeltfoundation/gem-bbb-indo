<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">#547CFF</item>
        <item name="android:textColorPrimary">@color/colorMenuText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:editTextStyle">@style/AppTheme.Widget.EditText</item>
        <item name="android:buttonStyle">@style/AppTheme.Widget.Button</item>

        <item name="textAppearanceHeading">@style/AppTheme.TextAppearance.Heading</item>
        <item name="textAppearanceHint">@style/AppTheme.TextAppearance.Hint</item>
        <item name="circularImageViewStyle">@style/AppTheme.CircularImageView</item>
    </style>

    <!-- EditText -->
    <style name="AppTheme.Widget.EditText" parent="Widget.AppCompat.EditText">

    </style>

    <!-- Button -->
    <style name="AppTheme.Widget.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorBodyText</item>
    </style>

    <!-- TextView -->
    <style name="AppTheme.TextAppearance.Heading" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorHeaderText</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextAppearance.Hint" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/text_hint</item>
    </style>

    <style name="AppTheme.CircularImageView">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
