<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/grey</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.Menu.Bold.Medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/toolbarBarTitleColor</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Toolbar.Title.Center" parent="AppTheme.Toolbar.Title">
        <item name="android:textColor">@color/toolbarBarTitleColor</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.Toolbar.Title.Yellow" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/k_font_xx_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Toolbar.SubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/toolbarBarSubTitleColor</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.HorsontalProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:progressBackgroundTint">@color/grey</item>
    </style>

    <!-- Buttons -->

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button.Borderless">

    </style>

    <style name="AppTheme.Button.Medium" parent="AppTheme.Button">
        <item name="android:textSize">@dimen/k_font_large</item>
        <item name="android:padding">@dimen/button_big_padding</item>
        <item name="fontPath">fonts/LondrinaSolid-Regular.ttf</item>
    </style>

    <style name="AppTheme.Button.Big" parent="AppTheme.Button">
        <item name="android:textSize">@dimen/k_font_xx_large</item>
        <item name="android:padding">@dimen/button_big_padding</item>
        <item name="fontPath">fonts/LondrinaSolid-Regular.ttf</item>
    </style>

    <style name="AppTheme.Button.Big.Yellow" parent="AppTheme.Button.Big">
        <item name="android:background">@drawable/button_bkg_yellow</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="AppTheme.Button.Big.Purple" parent="AppTheme.Button.Big">
        <item name="android:background">@drawable/button_bkg_purple</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="AppTheme.Button.Big.Black" parent="AppTheme.Button.Big">
        <item name="android:background">@drawable/button_bkg_black</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="AppTheme.Button.Big.LightBlue" parent="AppTheme.Button.Big">
        <item name="android:background">@drawable/button_bkg_light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay.Semitransparent.Dark" parent="AppTheme.PopupOverlay">
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/dark_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Edit Text -->

    <style name="AppTheme.EditText.Grey" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bkg_edit_view</item>
        <item name="android:paddingStart">@dimen/edit_text_padding</item>
        <item name="android:paddingEnd">@dimen/edit_text_padding</item>
        <item name="android:textAppearance">@style/AppTheme.TextView.Regular.Large</item>
    </style>

    <!-- Spinner -->

    <style name="AppTheme.SpinnerItem" parent="AppTheme.TextView.Regular.Medium">
        <item name="android:padding">@dimen/spinner_item_padding</item>
    </style>
    
    <!-- Dialog -->
    <style name="NoAnim">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
