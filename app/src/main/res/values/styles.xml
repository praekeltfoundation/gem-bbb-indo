<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/toolbarBarTitleColor</item>
    </style>

    <style name="AppTheme.Toolbar.Title.Center" parent="AppTheme.Toolbar.Title">
        <item name="android:textColor">@color/toolbarBarTitleColor</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.Toolbar.Title.Yellow" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/k_font_large</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.Toolbar.SubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/toolbarBarSubTitleColor</item>
    </style>

    <style name="AppTheme.Toolbar.SubTitle.Yellow" parent="AppTheme.Toolbar.SubTitle">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/k_font_small</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
