<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:drawable="@drawable/budget_progress_bar_outline" />
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="20dip" />
                <solid android:color="@color/light_blue_alpha" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <selector>
                <item android:drawable="@drawable/budget_progress_bar_fill"/>
            </selector>
        </clip>
    </item>
</layer-list>