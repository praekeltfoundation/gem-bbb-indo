<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nike.dooit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".views.RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.welcome.WelcomeActivity" />
        <activity android:name=".views.onboarding.RegistrationActivity" />
        <activity android:name=".views.onboarding.LoginActivity" />
        <activity
            android:name=".views.main.MainActivity"
            android:label="@string/title_activity_main" />
    </application>

</manifest>